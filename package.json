{
  "name": "slidev-theme-vuestorefront",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "Heitor Ramon Ribeiro",
    "url": "https://vuestorefront.io"
  },
  "repository": "https://www.github.com/vuestorefront/slidev-theme-vuestorefront",
  "keywords": [
    "slidev",
    "slidev-theme",
    "slidev-vuestorefront"
  ],
  "scripts": {
    "dev": "slidev example.md --open",
    "build": "slidev build example.md",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .eslintignore --fix .",
    "format": "prettier .  --write",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@slidev/types": "^0.31.2",
    "codemirror-theme-vars": "^0.1.1",
    "lodash-es": "^4.17.21",
    "theme-vitesse": "^0.4.9",
    "vite-svg-loader": "^3.3.0",
    "cli-real-favicon": "^0.0.8",
    "vite-plugin-remote-assets": "^0.2.2"
  },
  "devDependencies": {
    "@iconify-json/logos": "^1.1.5",
    "@iconify-json/mdi": "^1.1.11",
    "@iconify-json/ri": "^1.1.1",
    "@iconify-json/uim": "^1.1.1",
    "@slidev/cli": "^0.31.2",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vuedx/typescript-plugin-vue": "^0.7.5",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "playwright-chromium": "^1.21.1",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2",
    "typescript": "^4.6.4",
    "vue-eslint-parser": "^8.3.0"
  },
  "slidev": {
    "aspectRatio": "16/9",
    "colorSchema": "both",
    "highlighter": "shiki",
    "defaults": {
      "titleTemplate": "%s - Vue Storefront",
      "favicon": "./favicon.ico",
      "fonts": {
        "sans": [
          "Red Hat Text",
          "Red Hat Display"
        ],
        "mono": "JetBrains Mono",
        "colorSchema": "both",
        "weights": [
          "700",
          "600",
          "500",
          "400"
        ]
      },
      "hightlighter": "shiki"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "slidev": ">=0.31.2"
  }
}
